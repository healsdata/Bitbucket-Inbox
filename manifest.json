{
  "manifest_version": 2,

  "name": "Bitbucket Inbox",
  "description": "Notification count for the Bibucket Inbox (aka Pull Requests)",
  "version": "0.2",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "alarms"
  ]
}
